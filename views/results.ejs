<% layout('layout') %>

<div style="background: linear-gradient(135deg, #f8fafc 0%, #eff6ff 100%); margin: -50px -10% 50px -10%; padding: 80px 10% 60px 10%; border-bottom: 1px solid #e2e8f0;">
    <div style="display: flex; justify-content: space-between; align-items: flex-end;">
        <div style="max-width: 70%;">
            <span style="font-size: 0.75rem; font-weight: 800; color: var(--accent); text-transform: uppercase; letter-spacing: 0.15em; display: block; margin-bottom: 12px;">Hasil Analisis Optimasi</span>
            <h1 style="font-size: 3.2rem; font-weight: 800; letter-spacing: -0.05em; color: var(--primary); margin: 0; line-height: 1.1;">
                <%= project.name %>
            </h1>
        </div>
        <div style="text-align: right; background: white; padding: 15px 25px; border-radius: 16px; border: 1px solid #e2e8f0; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);">
            <span style="display: block; font-size: 0.7rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; margin-bottom: 4px;">Metode Kerja</span>
            <span style="font-size: 1rem; font-weight: 700; color: var(--accent);"><%= project.mode === 'target' ? 'TARGET ANALYSIS' : 'ACTUAL ANALYSIS' %></span>
        </div>
    </div>
</div>

<div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 25px; margin-bottom: 60px;">
    <div style="background: #ffffff; padding: 30px; border-radius: 24px; border: 1px solid #e2e8f0; position: relative; overflow: hidden; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.04);">
        <div style="font-size: 0.7rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; margin-bottom: 15px;">Line Efficiency</div>
        <div style="font-size: 2.5rem; font-weight: 800; color: #16a34a; letter-spacing: -0.02em;"><%= results.efficiency %>%</div>
        <div style="position: absolute; right: -10px; bottom: -10px; font-size: 5rem; color: #f0fdf4; font-weight: 900; z-index: 0;">%</div>
    </div>
    
    <div style="background: #ffffff; padding: 30px; border-radius: 24px; border: 1px solid #e2e8f0; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.04);">
        <div style="font-size: 0.7rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; margin-bottom: 15px;">Cycle Time</div>
        <div style="font-size: 2.5rem; font-weight: 800; color: var(--primary); letter-spacing: -0.02em;"><%= results.cycleTime %>s</div>
    </div>

    <div style="background: #ffffff; padding: 30px; border-radius: 24px; border: 1px solid #e2e8f0; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.04);">
        <div style="font-size: 0.7rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; margin-bottom: 15px;">Balance Delay</div>
        <div style="font-size: 2.5rem; font-weight: 800; color: #dc2626; letter-spacing: -0.02em;"><%= results.balanceDelay %>%</div>
    </div>

    <div style="background: #ffffff; padding: 30px; border-radius: 24px; border: 1px solid #e2e8f0; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.04);">
        <div style="font-size: 0.7rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; margin-bottom: 15px;">Smoothness Index</div>
        <div style="font-size: 2.5rem; font-weight: 800; color: var(--primary); letter-spacing: -0.02em;"><%= results.smoothnessIndex %></div>
    </div>
</div>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px; margin-bottom: 80px;">
    
    <div style="background: #ffffff; border-radius: 32px; border: 1px solid #e2e8f0; padding: 40px; box-shadow: 0 20px 25px -5px rgba(0,0,0,0.05);">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px;">
            <h3 style="font-size: 1.4rem; font-weight: 800; margin: 0; letter-spacing: -0.02em;">Beban Kerja per Stasiun</h3>
            <div style="display: flex; gap: 15px;">
                <div style="display: flex; align-items: center; gap: 8px; font-size: 0.75rem; font-weight: 700; color: #64748b;">
                    <span style="width: 12px; height: 12px; background: #2563eb; border-radius: 3px;"></span> Waktu Kerja
                </div>
                <div style="display: flex; align-items: center; gap: 8px; font-size: 0.75rem; font-weight: 700; color: #64748b;">
                    <span style="width: 12px; height: 3px; background: #dc2626; border-radius: 2px;"></span> Cycle Time
                </div>
            </div>
        </div>
        <div style="height: 400px;"><canvas id="balChart"></canvas></div>
    </div>

    <div style="display: flex; flex-direction: column; gap: 30px;">
        <div style="background: var(--primary); color: white; border-radius: 32px; padding: 40px; flex: 1;">
            <h4 style="font-size: 1.1rem; font-weight: 800; margin: 0 0 20px 0;">Catatan Analisis</h4>
            <p style="font-size: 0.9rem; color: #94a3b8; line-height: 1.6; margin-bottom: 30px;">
                Data di samping menunjukkan distribusi waktu pada setiap elemen kerja. Stasiun dengan grafik mendekati garis merah adalah <strong>Bottleneck</strong>.
            </p>
            <div style="background: rgba(255,255,255,0.05); padding: 20px; border-radius: 20px; border: 1px solid rgba(255,255,255,0.1);">
                <span style="display: block; font-size: 0.7rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; margin-bottom: 5px;">Total Kerja ($\sum T_i$)</span>
                <span style="font-size: 1.5rem; font-weight: 700;"><%= project.Stations.reduce((acc, curr) => acc + curr.time, 0).toFixed(3) %> s</span>
            </div>
        </div>
        
        <div style="background: #f8fafc; border: 1px dashed #cbd5e1; border-radius: 32px; padding: 40px; text-align: center;">
            <p style="font-size: 0.85rem; color: #64748b; font-weight: 600;">Gunakan hasil ini untuk melakukan rekayasa ulang lintasan produksi.</p>
        </div>
    </div>
</div>

<div style="margin-bottom: 100px;">
    <h3 style="font-size: 1.4rem; font-weight: 800; margin-bottom: 30px; letter-spacing: -0.02em;">Data Detail Elemen Kerja</h3>
    <div style="background: #ffffff; border-radius: 32px; border: 1px solid #e2e8f0; overflow: hidden; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.02);">
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="background: #f8fafc; text-align: left; border-bottom: 1px solid #e2e8f0;">
                    <th style="padding: 25px 40px; font-size: 0.75rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.1em;">No</th>
                    <th style="padding: 25px 40px; font-size: 0.75rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.1em;">Deskripsi Elemen Kerja</th>
                    <th style="padding: 25px 40px; text-align: right; font-size: 0.75rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.1em;">Waktu Baku (s)</th>
                </tr>
            </thead>
            <tbody>
                <% project.Stations.forEach((s, index) => { %>
                <tr style="border-bottom: 1px solid #f1f5f9; transition: 0.2s;" onmouseover="this.style.backgroundColor='#fcfcfc'" onmouseout="this.style.backgroundColor='transparent'">
                    <td style="padding: 25px 40px; font-weight: 700; color: #cbd5e1;"><%= index + 1 %></td>
                    <td style="padding: 25px 40px; font-weight: 700; color: var(--primary);"><%= s.name %></td>
                    <td style="padding: 25px 40px; text-align: right; font-weight: 800; color: var(--accent); font-family: 'Courier New', monospace;"><%= s.time.toFixed(3) %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('balChart').getContext('2d');
        const labels = <%- JSON.stringify(project.Stations.map(s => s.name)) %>;
        const dataTimes = <%- JSON.stringify(project.Stations.map(s => s.time)) %>;
        const ctLimit = <%= results.cycleTime %>;

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Limit',
                        data: Array(labels.length).fill(ctLimit),
                        type: 'line',
                        borderColor: '#dc2626',
                        borderWidth: 3,
                        borderDash: [8, 4],
                        pointRadius: 0,
                        order: 1
                    },
                    {
                        label: 'Waktu (s)',
                        data: dataTimes,
                        backgroundColor: '#2563eb',
                        borderRadius: 12,
                        order: 2
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { color: '#f1f5f9' }, border: { display: false } },
                    x: { grid: { display: false }, border: { display: false } }
                }
            }
        });
    });
</script>